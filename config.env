# GitHub Copilot Metrics Viewer Configuration
# Copy this file to .env and modify as needed

# Scope: organization, enterprise, team-organization, team-enterprise
NUXT_PUBLIC_SCOPE=organization

# GitHub Organization (required for organization scope)
NUXT_PUBLIC_GITHUB_ORG=hdicl

# GitHub Enterprise (leave empty for organization scope)
NUXT_PUBLIC_GITHUB_ENT=

# GitHub Team (leave empty to see all teams)
NUXT_PUBLIC_GITHUB_TEAM=

# Use mock data for testing (set to false to use real GitHub API)
NUXT_PUBLIC_IS_DATA_MOCKED=false

# GitHub Personal Access Token (required for real data)
# Generate with scopes: copilot, manage_billing:copilot, manage_billing:enterprise, read:enterprise, read:org
NUXT_GITHUB_TOKEN=

# Session encryption password (required, at least 32 characters)
NUXT_SESSION_PASSWORD=your-super-secret-password-here-32-chars

# GitHub OAuth Authentication (set to false for local development)
NUXT_PUBLIC_USING_GITHUB_AUTH=false

# OAuth GitHub App Client ID (leave empty if not using OAuth)
NUXT_OAUTH_GITHUB_CLIENT_ID=

# OAuth GitHub App Client Secret (leave empty if not using OAuth)
NUXT_OAUTH_GITHUB_CLIENT_SECRET=
